<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">
<!--      配置目标类-->
      <bean id="userDao" class="demo3.UserDaoImpl"></bean>
<!--     配置环绕通知类型-->
      <bean id="myAroudAdvance" class="demo3.MyAroudAdvace"/>
<!--    配置一个切入点-->
      <bean id="myAdvance" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
          <property name="pattern" value="save"></property>
          <property name="advice" ref="myAroudAdvance"></property>
      </bean>
<!--    Spring的aop产生代理-->
      <bean name="userDaoProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
<!--            配置目标类-->
        <property name="target" ref="userDao"></property>
<!--            实现的接口-->
        <property name="proxyInterfaces" value="demo3.UserDao"></property>
<!--            采用拦截的名称-->
        <property name="interceptorNames" value="myAroudAdvance"></property>
      </bean>

</beans>