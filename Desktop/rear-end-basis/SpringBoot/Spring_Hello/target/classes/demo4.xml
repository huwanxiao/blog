<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
      <!-- 此处介绍增强方法
        <bean id="userDao" class="com.imooc.ioc.demo4.UserDaoImpl" ></bean>
        <bean class="com.imooc.ioc.demo4.MyBeanPostProcessor"></bean>
      -->

     <!--此处介绍Bean的属性注入的三种方式-->
<!--      Bean的构造方法的属性注入 -->
      <bean id="userDao1" class="com.imooc.ioc.demo4.UserDaoImpl" >
            <constructor-arg name="name" value="zhangsan"></constructor-arg>
            <constructor-arg name="age" value="20"></constructor-arg>
      </bean>
<!--      Bean的set方法的注入 这种方式最常用-->
      <bean id="person" class="com.imooc.ioc.demo4.Person">
            <property name="name" value="wnagwu"></property>
            <property name="age" value="30"></property>
            <property name="cat" ref="cat"></property>    <!-- 注入类属性-->
      </bean>
      <bean id="cat" class="com.imooc.ioc.demo4.Cat">
            <property name="name" value="kitty"></property>
            <property name="age" value="3"></property>
      </bean>
</beans>